<style>	
 [data-icon] {
color: yellow;
 }
 [data-icon='star2'] {
color: white;
 }
main{
height: 100%;
width: 100%;
background-image: radial-gradient(50% 50% at 50% 50%, rgba(0, 0, 0, 0.5) 0%, rgb(0, 0, 0,90%) 1%);
position: relative;
}

.marquee {
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  width: 300px;
  height:40px;
  .marquee_inner{
	display: block;
	margin: 0 auto;
	width:750px;
	position: absolute;
	transform: translate(0%,-50%);
	top:50%;
	animation: marquee 20s linear infinite;
	span {
	.orb {
  		transition: all .2s ease-out;
  		display: inline-flex;
		align-items: flex-end;
}
  }
  }
  
}

@keyframes marquee {
  0% { left: 0; }
  100% { left: -100%; }
}
.divide-x-0 > :not([hidden]) ~ :not([hidden]) {
    border-right-width:none;
    border-left-width: calc(0.0005em * calc(1 - 0));
}

</style>

<script>
